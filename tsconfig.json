{
  "compilerOptions": {
    /* Basic Options */
    "forceConsistentCasingInFileNames": true,
    "target": "es2022",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,

    /* Type Declarations */
    "types": [
      "jest" // Add "jest" to the "types" array
    ]
  },
  "include": [
    "src/**/*" // Use double asterisks (**) for recursive directory matching
  ],
  "exclude": ["*.test.ts"]
}
